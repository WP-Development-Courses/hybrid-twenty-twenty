{
  "version": 1,
  "settings": {
    "layout": {
      "contentSize": "610px",
      "wideSize": "1200px"
    },
    "custom" : {
      "colors": {
        "black": "#000000",
        "red": "#cd2653",
        "beige": "#dcd7ca",
        "light-beige": "#f5efe0",
        "grey": "#6d6d6d"
      }
    },
    "color": {
      "palette": [
        {
          "slug": "accent",
          "name": "Accent Color",
          "color": "var(--wp--custom--colors--red)"
        },
        {
          "slug": "primary",
          "name": "Primary",
          "color": "var(--wp--custom--colors--black)"
        },
        {
          "slug": "secondary",
          "name": "Secondary",
          "color": "var(--wp--custom--colors--grey)"
        },
        {
          "slug": "subtle-background",
          "name": "Subtle Background",
          "color": "var(--wp--custom--colors--beige)"
        },
        {
          "slug": "background",
          "name": "Background Color",
          "color": "var(--wp--custom--colors--light-beige)"
        }
      ]
    },
    "typography": {
      "fontSizes": [
        {
          "slug": "small",
          "name": "Small",
          "size": "0.842em"
        },
        {
          "slug": "normal",
          "name": "Regular",
          "size": "1em"
        },
        {
          "slug": "large",
          "name": "Large",
          "size": "1.4em"
        },
        {
          "slug": "larger",
          "name": "Larger",
          "size": "1.5em"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--custom--colors--light-beige)",
      "text": "var(--wp--custom--colors--black)"
    },
    "typography": {
      "fontSize": "1.8rem"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--custom--colors--red)"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--htt--heading-size-1)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--htt--heading-size-2)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--htt--heading-size-3)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--htt--heading-size-4)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--htt--heading-size-5)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--htt--heading-size-6)"
        }
      }
    },
    "blocks": {
      "core/post-title": {
        "typography": {
          "fontSize": "var(--htt--heading-size-1)"
        }
      },
      "core/site-tagline": {
        "color": {
          "text": "var(--wp--custom--colors--grey)"
        },
        "typography": {
          "fontSize": "18px"
        }
      },
      "core/site-title": {
        "typography": {
          "fontSize": "var(--htt--site-title-font-size)",
          "lineHeight": "1"
        },
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--custom--colors--black)"
            }
          }
        }
      }
    }
  }
}
